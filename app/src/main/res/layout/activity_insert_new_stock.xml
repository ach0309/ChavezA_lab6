<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertNewStockActivity">

    <EditText
        android:id="@+id/insert_stock_name_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Stock Name" />

    <EditText
        android:id="@+id/insert_stock_price_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Stock Price"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/insert_stock_name_text"/>
    <EditText
        android:id="@+id/insert_stock_alltime_price_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Stock All-Time High Price"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/insert_stock_price_text"/>
    <EditText
        android:id="@+id/insert_stock_market_cap_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Stock Market Cap"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/insert_stock_alltime_price_text"/>
    <Button
        android:id="@+id/insert_stock_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Insert Stock"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/insert_stock_market_cap_text"/>



</RelativeLayout>